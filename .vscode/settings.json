{
    "python.autoComplete.extraPaths": [
        ".venv/lib/python3.10/site-packages"
    ],
    "python.analysis.extraPaths": [
        "./src"
    ],


    // pytestのパスをどうにか設定したい
    "python.testing.pytestEnabled": true,
    "python.formatting.provider": "black",

    "yaml.customTags": [
        "!MapData mapping"
    ],

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.venv": true,
    },

    "asciiTreeGenerator.directoryIgnore": [
        "node_modules",
        ".git",
        ".venv",
        "__pycache__",
        ".pytest_cache",
        ".pyc"
    ]
}